@{
    ViewBag.Title = "ForgotPassword";
}

<h3><span class="glyphicon glyphicon-user"></span> Lấy lại mật khẩu</h3>
@using (Html.BeginForm("ForgotPassword", "Auth", FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
{
    @Html.AntiForgeryToken();
    <div class="form-group">
        <label class="control-label col-lg-2">Email</label>
        <div class="col-lg-3">
            <input type="email" id="email" name="email" value="" class="form-control" />
        </div>
        <div class="col-lg-2">
            <button class="btn btn-success" type="submit">Gửi mật khẩu</button>
        </div>
    </div>
