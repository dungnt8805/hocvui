@{
    ViewBag.Title = "Đăng nhập ::";
}

<h3><span class="glyphicon glyphicon-user"></span>Đăng nhập</h3>
@using (Html.BeginForm("Login", "Auth", FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label class="control-label col-lg-2">Tài khoản</label>
        <div class="col-lg-3">
            <input type="text" id="username" id="username" value=""  class="form-control"/>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-lg-2">Mật khẩu</label>
        <div class="col-lg-3">
            <input type="password" id="password" id="password" value=""  class="form-control"/>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-lg-2"></label>
        <div class="col-lg-3">
            <input type="checkbox" name="remember-me" id="remember-me" value="1" checked="checked" /> Duy trì đăng nhập
        </div>
    </div>
    <div class="form-group">
        <label class="col-lg-2"></label>
        <div class="col-lg-2">
            <button class="btn btn-success" type="submit">Đăng nhập</button>
            @Html.ActionLink("Quên mật khẩu", "ForgotPassword","Auth")
        </div>
    </div>
}