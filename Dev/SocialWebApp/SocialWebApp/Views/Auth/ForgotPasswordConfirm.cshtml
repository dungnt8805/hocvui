@{
    ViewBag.Title = "ForgotPasswordConfirm";
}

<h3>
    <span class="glyphicon glyphicon-user"></span>Tạo mật khẩu
</h3>
@using (Html.BeginForm("ForgotPasswordConfirm", "Auth", FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label class="control-label col-lg-2">Mật khẩu</label>
        <div class="col-lg-3">
            <input class="form-control" name="password" id="password" type="password"/>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-lg-2">Xác nhân mật khẩu</label>
        <div class="col-lg-3">
            <input class="form-control" name="confirm_password" id="confirm_password" type="password"/>
        </div>
    </div>
    <div class="form-group">
        <label class="col-lg-2"></label>
        <div class="col-lg-3">
            <button class="btn btn-success">Xác nhận</button>
        </div>
    </div>
}
