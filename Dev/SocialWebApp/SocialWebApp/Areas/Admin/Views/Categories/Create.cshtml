@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h3>
    <span class="glyphicon glyphicon-pencil"></span>Tạo chuyên mục mới
</h3>
<form method="post" action="" autocomplete="off" class="form-horizontal" role="form">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label class="control-label col-lg-2" for="title">Tiêu đề</label>
        <div class="col-lg-7">
            <input class="form-control" name="title" id="title" type="text" value="" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-lg-2">Meta keywords</label>
        <div class="col-lg-7">
            <input class="form-control"  value="" name="meta_keywords" id="meta_keywords" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-lg-2">Meta description</label>
        <div class="col-lg-7">
            <input class="form-control"  value="" name="meta_description" id="meta_description" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-lg-2">Chuyên mục cha</label>
        <div class="col-lg-7"></div>
    </div>
    <div class="form-group">
        <label class="control-label col-lg-2">Mô tả
        </label>
        <div class="col-lg-7">
            <textarea class="form-control" name="content" id="textareabox" rows="10"></textarea>
        </div>
    </div>
</form>
