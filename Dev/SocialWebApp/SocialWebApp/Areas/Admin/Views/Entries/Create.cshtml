@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h3>
    <span class="glyphicon glyphicon-pencil"></span>Đăng bài viết
</h3>
<ul class="nav nav-tabs" style="margin: 15px 0">
    <li class="active"><a href="#tab-general" data-toggle="tab">Thông tin chung</a></li>
    <li><a href="#tab-category" data-toggle="tab">Chuyên mục</a></li>
</ul>
<form action="" autocomplete="on" method="post" role="form">
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-sm-9">
            <div class="tab-content">
                <div class="tab-pane active" id="tab-general">
                    <div class="form-group">
                        <label class="control-label" for="title">Tiêu đề</label>
                        <input class="form-control" type="text" name="title" id="title" value="" />
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-3 col-right">
            <div class="col-lg-2">
                <button type="submit" class="btn btn-success btn-sm">Lưu</button>
            </div>
            <div class="col-lg-2"></div>
            <div class="col-lg-3">
                <a class="btn btn-success btn-sm" id="preview">Preview</a>
            </div>
        </div>
    </div>
</form>
